<pretty-config xmlns="http://ocpsoft.org/schema/rewrite-config-prettyfaces" 
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
  xsi:schemaLocation="http://ocpsoft.org/schema/rewrite-config-prettyfaces
  http://ocpsoft.org/xml/ns/prettyfaces/rewrite-config-prettyfaces.xsd">

	<url-mapping id="default">
		<pattern value="/" />
		<view-id value="/index.xhtml" />
	</url-mapping>

	<url-mapping id="index">
		<pattern value="/index" />
		<view-id value="/index.xhtml" />
	</url-mapping>
	
	<url-mapping id="menu">
		<pattern value="/menu" />
		<view-id value="/menu.xhtml" />
	</url-mapping>
	
	<url-mapping id="reservation">
		<pattern value="/reservation" />
		<view-id value="/reservation.xhtml" />
	</url-mapping>
	
	<url-mapping id="about">
		<pattern value="/about" />
		<view-id value="/about.xhtml" />
	</url-mapping>
	
	<url-mapping id="login">
		<pattern value="/login" />
		<view-id value="/login.xhtml" />
	</url-mapping>
	
	<url-mapping id="sec-reservation">
		<pattern value="/secure/reservation" />
		<view-id value="/secure/reservation.xhtml" />
	</url-mapping>
	
	<url-mapping id="sec-menu">
		<pattern value="/secure/menu" />
		<view-id value="/secure/menu.xhtml" />
	</url-mapping>

	<url-mapping id="sec-about">
		<pattern value="/secure/about" />
		<view-id value="/secure/about.xhtml" />
	</url-mapping>
	
	<url-mapping id="sec-images">
		<pattern value="/secure/images" />
		<view-id value="/secure/images.xhtml" />
	</url-mapping>
	
	<url-mapping id="sec-accounts">
		<pattern value="/secure/accounts" />
		<view-id value="/secure/accounts.xhtml" />
	</url-mapping>
	
	<url-mapping id="sec-settings">
		<pattern value="/secure/settings" />
		<view-id value="/secure/settings.xhtml" />
	</url-mapping>

